<!--pages/register/register.wxml-->
<view class='title'>新用户注册</view>

<form bindsubmit='onsubmit'>
  <view class='view-container'>
   <input class='input' type='text' name='uname' placeholder='用户名'></input>
    <input class='input' type='text' name='number' placeholder='手机号'></input>
    <input class='input' password='true' name='passwd' placeholder='密码'></input>
    <input class='input' password='true' name='compasswd' placeholder='确认密码'></input>
    <button class='btn' type='primary' form-type='submit'>注册</button>
  </view>
</form>